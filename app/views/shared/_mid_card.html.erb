<div class="mid_card my-3">
  <%#= link_to place_path(place), class: 'card-link' do %>
    <%#= link_to place_path(place) do %>
      <% if place.photos.attached? %>
        <%= cl_image_tag place.photos.first.key, style:"width:100%; height:200px" %>
      <% else %>
        <img style="width:100%" src="https://wallpaperaccess.com/full/2286682.jpg"/>
      <% end %>
      <%# end %>
      <div class="mid_card-info gallery_card_info">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h2><%= place.name %></h2>
          <h4 class="m-0"><%= place.city.capitalize %></h4>
        </div>
        <%# ------------- conditional for percentage icon ------------ %>
        <div class='cards-icons'>
          <% if place.area == 'fully' %>
            <h3 class='percentage-icon green text-center'><%= place.area.titleize %> Accessible</h3>
          <% elsif place.area == 'mostly' %>
            <h3 class='percentage-icon yellow text-center'><%= place.area.titleize %> Accessible</h3>
          <% elsif place.area == 'partly' %>
            <h3 class='percentage-icon orange text-center'><%= place.area.titleize %> Accessible</h3>
          <% elsif place.area == 'not' %>
            <h3 class='percentage-icon red'><%= place.area.titleize %> Accessible</h3>
          <% end %>
          <div class="d-flex flex-row-reverse icons-container">
            <%# ------------ TOILET --------------- %>
            <% if place.toilet == "has_one" || place.toilet == "has_many" %>
              <h3 class="mx-1 puto3"><i class="access-icon fas fa-solid fa-restroom roll fa-lg"></i></h3>
            <% else %>
              <h3 class="faded mx-1 position-relative puto3">
                <i class="fas fa-solid fa-restroom roll fa-lg"></i>
                <i class="slash fas fa-slash fa-lg text-danger position-absolute"></i>
              </h3>
            <% end %>
            <%# ------------ PARKING --------------- %>
            <% if place.parking == "has"%>
              <h3 class="mx-1 access-icon">
                <p class="puto">P</p>
              </h3>
            <% else %>
              <h3 class="mx-1 position-relative faded">
                <p class="puto">P</p>
                <i class="slash fas fa-slash fa-lg text-danger position-absolute"></i>
              </h3>
            <% end %>
            <%# ------------ CHARGING STATION --------------- %>
            <%# <% if place.charging == "has"%>
            <%# <h3 class="mx-1"><i class="access-icon fas fa-charging-station fa-lg" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Tooltip on bottom"></i></h3> %>
            <%# <% end %>
            <%# ------------ Accessible AREA --------------- %>
            <%# <% if place.area == "most" || place.area == "all"%>
            <%# <h3 class="mx-1"><i class="access-icon fas fa-wheelchair fa-lg" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Wheelchair Charging Station"></i></h3> %>
            <%# <% end %>
            <%# ------------ ELEVATOR --------------- %>
            <% if place.elevator == "has"%>
              <i class="mx-1 puto2 access-icon fas fa-universal-access fa-lg"></i>
            <% else %>
              <div class="faded position-relative puto2-container">
                <i class="mx-1 puto2 fas fa-universal-access fa-lg"></i>
                <i class="slash fas fa-slash fa-lg text-danger position-absolute"></i>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <%# end %>
    </div>

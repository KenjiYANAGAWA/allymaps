<div class="mid_card mx-3 my-3">
  <%= link_to place_path(place) do %>
    <% if place.photos %>
      <%= cl_image_tag place.photos.first.key ,style:"width:100%" %>
    <% else %>
      <img style="width:100%" src="https://wallpaperaccess.com/full/2286682.jpg"/>
    <% end %>
  <% end %>
  <div class="mid_card-info">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2><%= place.name %></h2>
      <h4 class="m-0"><%= place.city.capitalize %></h4>
    </div>
    <div class="d-flex justify-content-between" style="margin-left: 60px;">
      <%# ------------ TOILET --------------- %>
      <% if place.toilet == "has_one" || place.toilet == "has_many" %>
        <h3><i class="fas fa-toilet-paper fa-2x"></i></h3>
      <% end %>
      <%# ------------ PARKING --------------- %>
      <% if place.parking == "has"%>
        <h3><i class="fas fa-parking fa-2x"></i></h3>
      <% end %>
      <%# ------------ CHARGING STATION --------------- %>
      <% if place.charging == "has"%>
        <h3><i class="fas fa-charging-station fa-2x"></i></h3>
      <% end %>
      <%# ------------ Accessible AREA --------------- %>
      <% if place.area == "most" || place.area == "all"%>
        <h3><i class="fas fa-wheelchair fa-2x"></i></h3>
      <% end %>
      <%# ------------ ELEVATOR --------------- %>
      <% if place.elevator == "has"%>
        <h3><i class="fas fa-universal-access fa-2x"></i></h3>
      <% end %>
    </div>
  </div>
</div>

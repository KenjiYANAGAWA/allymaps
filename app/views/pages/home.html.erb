<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images.pexels.com/photos/3009785/pexels-photo-3009785.jpeg');">
  <%= render 'shared/navbar_top' %>

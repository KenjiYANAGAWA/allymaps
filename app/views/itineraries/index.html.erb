<div class="container m-2 p-3">
  <h1 class="text-center mb-4">Itineraries</h1>
  <%# ------------ new itinerary form ---------------- %>
  <h3>Add a new itinerary</h3>
  <%= simple_form_for @itinerary do |f|%>
    <%= f.input :name %>
    <%= f.submit 'Add', class: 'btn btn-primary mb-3' %>
  <% end %>
  <%# -------------list of my itineraries------------- %>
  <% if @itineraries.any? %>
    <% @itineraries.each do |itinerary| %>
      <%= link_to itinerary_path(itinerary) do %>
        <div class="itinerary_card mx-3 my-3" style="background-image: linear-gradient(rgba(0, 0, 0, 0.527), rgba(0, 0, 0, 0.5)),url(<%= cl_image_path(itinerary.places.first.photos.first.key) %>)">
          <div class="itinerary_card-info">
            <% if itinerary.name %>
              <h2><%= itinerary.name.upcase %></h2>
            <% else %>
              <h2>UNNAMED ITINERARY</h2>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <h3 class="text-center">No itineraries yet</h3>
  <% end %>
</div>

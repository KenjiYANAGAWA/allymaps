<%= link_to destination.place.accommodation? ? "javascript: void(0)" : place_path(destination.place) do %>
  <div class="destination_card my-2">
    <div class="dc_up-down">
      <i class="fas fa-chevron-up"></i>
      <i class="fas fa-chevron-down"></i>
    </div>
    <div class="dc_img">
      <%= destination.place.photos&.attached? ? cl_image_tag(destination.place.photos.first.key) : image_tag("https://images.vexels.com/media/users/3/128747/isolated/preview/30bdbb2e5f0f12d108d559752aff147e-sleeping-bed-real-estate-icon.png") %>
    </div>
    <div class="dc_info">
      <div>
        <h2><%= destination.place.name %></h2>
        <div class="d-flex">
          <%# ------------ TOILET --------------- %>
          <% if destination.place.toilet == "has_one" || destination.place.toilet == "has_many" %>
            <div class="cards-icons">
              <div class="icons-container">
                <h3 class="mx-1 puto3"><i class="fas fa-solid fa-restroom roll fa-lg"></i></h3>
              </div>
            </div>
          <% else %>
            <div class="cards-icons">
              <div class="icons-container">
                <h3 class="faded mx-1 position-relative puto3">
                  <i class="fas fa-solid fa-restroom roll fa-lg"></i>
                  <i class="slash fas fa-slash fa-lg text-danger position-absolute"></i>
                </h3>
              </div>
            </div>
          <% end %>
          <%# ------------ PARKING --------------- %>
          <% if destination.place.parking == "has"%>
            <div class="cards-icons">
              <div class="icons-container">
                <h3 class="mx-1">
                  <p class="puto">P</p>
                </h3>
              </div>
            </div>
          <% else %>
            <div class="cards-icons">
              <div class="icons-container">
                <h3 class="mx-1 position-relative faded">
                  <p class="puto">P</p>
                  <i class="slash fas fa-slash fa-lg text-danger position-absolute"></i>
                </h3>
              </div>
            </div>
          <% end %>
          <%# ------------ ELEVATOR --------------- %>
          <% if destination.place.elevator == "has"%>
            <div class="cards-icons my-1">
              <div class="icons-container">
                <i class="mx-1 puto2 fas fa-universal-access fa-lg"></i>
              </div>
            </div>
          <% else %>
            <div class="cards-icons my-1">
              <div class="icons-container">
                <div class="faded position-relative puto2-container">
                  <i class="mx-1 puto2 fas fa-universal-access fa-lg"></i>
                  <i class="slash fas fa-slash fa-lg text-danger position-absolute"></i>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="nav-back">
  <%= render 'shared/back_button' %>
  <h1 class="px-4">Search your destination</h1>
</div>
<div class="container mt-3 p-3">
  <%# -------------list of places------------- %>
  <%= form_tag places_path, method: :get, class: 'search-form' do %>
    <%= text_field_tag :address,
      params[:location],
      class: "form-control",
      placeholder: "Where do you want to go?"
  %>
    <%= submit_tag "Search", class: "btn btn-dark btn-search" %>
  <% end %>
  <%# -------------list of places------------- %>
  <% @places.each do |place| %>
    <%= link_to place_path(place) do %>
      <div class="mid_card mx-3 my-3">
        <%= link_to place_path(place) do %>
          <img src="https://wallpaperaccess.com/full/2286682.jpg" alt="">
        <% end %>
        <div class="mid_card-info">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h2><%= place.name %></h2>
            <h4 class="m-0"><%= place.address.capitalize %></h4>
          </div>
          <div class="d-flex justify-content-between" style="margin-left: 60px;">
            <h3 data-bs-toggle="tooltip" title="Tooltip on top"><i class="fas fa-toilet-paper fa-2x" ></i></h3>
            <h3><i class="fas fa-parking fa-2x"></i></h3>
            <h3><i class="fas fa-charging-station fa-2x"></i></h3>
            <h3><i class="fas fa-wheelchair fa-2x"></i></h3>
            <h3><i class="fas fa-universal-access fa-2x"></i></h3>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
